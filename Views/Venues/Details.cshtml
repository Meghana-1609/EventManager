@model EventManager.Models.Venue

@{
    ViewData["Title"] = "Details";
}

<!-- Page Styles -->
<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #fff7e6; /* Light orange background */
        color: #333;
    }

    h1 {
        color: #444;
        font-size: 2rem;
        text-align: center;
        margin-bottom: 20px;
    }

    .container {
        max-width: 600px;
        margin: auto;
        padding: 20px;
        background-color: #ffffff; /* White background for details container */
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    h4 {
        color: #ffa500; /* Orange accent color */
        font-size: 1.5rem;
        border-bottom: 2px solid #ffa500;
        padding-bottom: 5px;
        margin-bottom: 20px;
    }

    .row {
        display: flex;
        align-items: center;
        margin-bottom: 15px;
        text-align: left;
    }

    .col-sm-2 {
        font-weight: bold;
        color: #555;
        min-width: 120px;
    }

    .col-sm-10 {
        background-color: #fff5e0; /* Light orange background for detail sections */
        padding: 10px 15px;
        border-radius: 4px;
    }

    .action-links {
        text-align: center;
        margin-top: 20px;
    }

        .action-links a {
            color: #ffa500;
            text-decoration: none;
            font-size: 1rem;
            margin: 0 5px;
        }

            .action-links a:hover {
                color: #e69500;
                text-decoration: underline;
            }
</style>

<!-- Page Content -->
<div class="container">
    <h1>Venue Details</h1>

    <h4>Venue Information</h4>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.VenueName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.VenueName)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Location)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Location)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Capacity)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Capacity)
        </dd>
    </dl>

    <div class="action-links">
        <a asp-action="Edit" asp-route-id="@Model?.VenueId">Edit</a> |
        <a asp-action="Index">Back to List</a>
    </div>
</div>
