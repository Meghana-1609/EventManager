@model EventManager.Models.Booking

@{
    ViewData["Title"] = "Delete";
}

<!-- Page Styles -->
<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f9f9fb;
        color: #333;
    }

    h1 {
        color: #444;
        font-size: 2rem;
        text-align: center;
        margin-bottom: 20px;
    }

    .container {
        max-width: 600px;
        margin: auto;
        padding: 20px;
        background-color: #ffffff;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        text-align: center;
    }

    h4 {
        color: #dc3545;
        font-size: 1.5rem;
        border-bottom: 2px solid #dc3545;
        padding-bottom: 5px;
        margin-bottom: 20px;
    }

    .confirmation-text {
        color: #555;
        font-size: 1.1rem;
        margin-bottom: 20px;
    }

    .row {
        display: flex;
        align-items: center;
        margin-bottom: 15px;
        text-align: left;
    }

    .col-sm-2 {
        font-weight: bold;
        color: #555;
        min-width: 100px;
    }

    .col-sm-10 {
        background-color: #f2f2f2;
        padding: 10px 15px;
        border-radius: 4px;
        margin-left: 5px;
    }

    .btn-danger {
        background-color: #dc3545;
        border: none;
        padding: 10px 20px;
        font-size: 1rem;
        border-radius: 4px;
        color: #fff;
        cursor: pointer;
        text-decoration: none;
        transition: background-color 0.3s ease;
        margin-top: 10px;
    }

        .btn-danger:hover {
            background-color: #c82333;
        }

    .back-link {
        display: inline-block;
        margin-top: 20px;
    }

        .back-link a {
            color: #007bff;
            text-decoration: none;
            font-size: 1rem;
        }

            .back-link a:hover {
                text-decoration: underline;
            }
</style>

<!-- Page Content -->
<div class="container">
    <h1>Delete Booking</h1>

    <p class="confirmation-text">Are you sure you want to delete this booking?</p>

    <h4>Booking Details</h4>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Client)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Client.ClientId)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Event)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Event.EventId)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Venue)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Venue.VenueId)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BookingDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BookingDate)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="BookingId" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <span class="back-link"> | <a asp-action="Index">Back to List</a></span>
    </form>
</div>
