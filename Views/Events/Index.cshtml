@model IEnumerable<EventManager.Models.Event>

@{
    ViewData["Title"] = "Index";
}

<!-- Page Styles -->
<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #fdfde1; /* Light yellow background */
        color: #333;
    }

    h1 {
        color: #444;
        font-size: 2rem;
        text-align: center;
        margin-bottom: 20px;
    }

    .container {
        max-width: 900px;
        margin: auto;
        padding: 20px;
        background-color: #ffffff;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .btn-create {
        background-color: #f2b600;
        color: #ffffff;
        padding: 8px 16px;
        border-radius: 4px;
        text-decoration: none;
        margin-bottom: 15px;
        display: inline-block;
    }

        .btn-create:hover {
            background-color: #d1a200;
        }

    .table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 10px;
    }

        .table th, .table td {
            padding: 12px 15px;
            text-align: left;
        }

        .table thead {
            background-color: #f2b600;
            color: #ffffff;
        }

        .table tbody tr:nth-child(even) {
            background-color: #fdfdf5;
        }

        .table tbody tr:hover {
            background-color: #fff3c1; /* Light hover effect */
        }

        .table th {
            font-weight: bold;
        }

    .action-links a {
        color: #f2b600;
        text-decoration: none;
        margin: 0 5px;
    }

        .action-links a:hover {
            text-decoration: underline;
            color: #d1a200;
        }
</style>

<!-- Page Content -->
<div class="container">
    <h1>Events</h1>
    <p>
        <a asp-action="Create" class="btn-create">Create New</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.First().EventType)</th>
                <th>@Html.DisplayNameFor(model => model.First().Date)</th>
                <th>@Html.DisplayNameFor(model => model.First().Budget)</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.EventType)</td>
                    <td>@Html.DisplayFor(modelItem => item.Date)</td>
                    <td>@Html.DisplayFor(modelItem => item.Budget)</td>
                    <td class="action-links">
                        <a asp-action="Edit" asp-route-id="@item.EventId">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.EventId">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.EventId">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
