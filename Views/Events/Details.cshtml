@model EventManager.Models.Event

@{
    ViewData["Title"] = "Details";
}

<!-- Page Styles -->
<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #fdfde1; /* Light yellow background */
        color: #333;
    }

    h1 {
        color: #444;
        font-size: 2rem;
        text-align: center;
        margin-bottom: 20px;
    }

    .container {
        max-width: 600px;
        margin: auto;
        padding: 20px;
        background-color: #ffffff; /* White background for the content container */
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    h4 {
        color: #f2b600; /* Yellow accent color */
        font-size: 1.5rem;
        border-bottom: 2px solid #f2b600;
        padding-bottom: 5px;
        margin-bottom: 20px;
    }

    .row {
        display: flex;
        align-items: center;
        margin-bottom: 15px;
    }

    .col-sm-2 {
        font-weight: bold;
        color: #555;
        min-width: 120px;
    }

    .col-sm-10 {
        background-color: #fdfdf5; /* Light off-white background for details */
        padding: 10px 15px;
        border-radius: 4px;
    }

    .action-links {
        text-align: center;
        margin-top: 20px;
    }

        .action-links a {
            color: #f2b600;
            text-decoration: none;
            font-size: 1rem;
            margin: 0 5px;
        }

            .action-links a:hover {
                color: #d1a200;
                text-decoration: underline;
            }
</style>

<!-- Page Content -->
<div class="container">
    <h1>Event Details</h1>

    <h4>Event Information</h4>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EventType)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EventType)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Date)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Date)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Budget)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Budget)
        </dd>
    </dl>

    <div class="action-links">
        <a asp-action="Edit" asp-route-id="@Model?.EventId">Edit</a> |
        <a asp-action="Index">Back to List</a>
    </div>
</div>
