@model EventManager.Models.Event

@{
    ViewData["Title"] = "Delete";
}

<!-- Page Styles -->
<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #fdfde1; /* Light yellow background */
        color: #333;
    }

    h1 {
        color: #444;
        font-size: 2rem;
        text-align: center;
        margin-bottom: 20px;
    }

    .container {
        max-width: 600px;
        margin: auto;
        padding: 20px;
        background-color: #ffffff; /* White background for container */
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        text-align: center;
    }

    .confirmation-text {
        color: #d9534f; /* Red warning color */
        font-size: 1.1rem;
        margin-bottom: 20px;
    }

    h4 {
        color: #f2b600; /* Yellow accent color */
        font-size: 1.5rem;
        border-bottom: 2px solid #f2b600;
        padding-bottom: 5px;
        margin-bottom: 20px;
    }

    .row {
        display: flex;
        align-items: center;
        margin-bottom: 15px;
        text-align: left;
    }

    .col-sm-2 {
        font-weight: bold;
        color: #555;
        min-width: 120px;
    }

    .col-sm-10 {
        background-color: #fdfdf5; /* Light yellow background for details */
        padding: 10px 15px;
        border-radius: 4px;
    }

    .btn-danger {
        background-color: #d9534f; /* Red delete button */
        border: none;
        padding: 10px 20px;
        font-size: 1rem;
        border-radius: 4px;
        color: #fff;
        cursor: pointer;
        text-decoration: none;
        transition: background-color 0.3s ease;
        margin-top: 10px;
    }

        .btn-danger:hover {
            background-color: #c9302c;
        }

    .back-link {
        display: inline-block;
        margin-top: 20px;
    }

        .back-link a {
            color: #f2b600;
            text-decoration: none;
            font-size: 1rem;
        }

            .back-link a:hover {
                text-decoration: underline;
            }
</style>

<!-- Page Content -->
<div class="container">
    <h1>Delete Event</h1>

    <p class="confirmation-text">Are you sure you want to delete this event?</p>

    <h4>Event Details</h4>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EventType)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EventType)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Date)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Date)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Budget)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Budget)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="EventId" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <span class="back-link"> | <a asp-action="Index">Back to List</a></span>
    </form>
</div>
